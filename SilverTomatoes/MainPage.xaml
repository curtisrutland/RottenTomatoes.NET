<UserControl xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"  xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"  x:Class="SilverTomatoes.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="485" d:DesignWidth="778">

    <Grid x:Name="LayoutRoot" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="3">
            <TextBlock Text="Query:" Margin="3" VerticalAlignment="Center" />
            <TextBox x:Name="queryTextBox" TextChanged="queryTextBox_TextChanged" Width="300" Margin="3" />
            <TextBlock Text="Page Size:" Margin="3" VerticalAlignment="Center" />
            <toolkit:NumericUpDown x:Name="pageSizeUpDown" Margin="3" Maximum="50" Minimum="1" Value="10" Increment="1" />
        </StackPanel>
        <toolkit:BusyIndicator x:Name="loadingBusyIndicator" Grid.Row="1" >            
            <sdk:DataGrid x:Name="resultDataGrid" />
        </toolkit:BusyIndicator>
    </Grid>
</UserControl>
